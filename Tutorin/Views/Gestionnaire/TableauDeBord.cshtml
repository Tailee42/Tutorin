@model Tutorin.ViewModels.TableauBordGestionnaireViewModel
@using Tutorin.Models
@{
    ViewBag.Title = "Tableau de Bord Gestionnaire";
    Layout = "_LayoutDuSite";
}

@section css {
    <link href="/css/cards.css" rel="stylesheet" />
}

@section Menu {

    <a href="/Gestionnaire/TableauDeBord">Accueil</a>
    <a href="/ContenuPedagogique/Index2">Les cours</a>
    <a href="/Gestionnaire/GererUtilisateurs">Les utilisateurs</a>
    <a href="/Prestation/">Les prestations</a>
    <a href="/Gestionnaire/modifier?gestionnaireId=@Model.Gestionnaire.Id">Mon Compte</a>
    <a href="/login/Deconnexion">Déconnexion</a>
}

<div class="nomUtilisateur">
    <h2>@Model.Gestionnaire.Utilisateur.Nom.ToUpper() @Model.Gestionnaire.Utilisateur.Prenom</h2>
</div>

<h1>Les cours</h1>
<fieldset>
    <table>
        <thead>
            <tr>
                <td>Etat des cours</td>
                <td>Nombre de cours</td>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>A Valider :</td>
                <td>@Model.NbCoursAValider</td>
            </tr>
            <tr>
                <td>A Modifier :</td>
                <td>@Model.NbCoursAModifier</td>
            </tr>
            <tr>
                <td>En Ligne :</td>
                <td>@Model.NbCoursEnLigne</td>
            </tr>
        </tbody>
        <tfoot>
            <tr>
                <td>Total de cours :</td>
                <td>@Model.NbCoursTotal</td>
            </tr>
    </table>
</fieldset>

<h1>Les prestations :</h1>
<fieldset>
    <table>
        <thead>
            <tr>
                <td>Etat des prestations</td>
                <td>Nombre de prestations</td>
            </tr>
        </thead>
            <tr>
            A_affecter, Enseignants_inscrits, Payee_par_responsable_eleve, Realisée, Enseigants_payes, Attestation_a_faire, Facturee, Annulee
                <td>En cours d'affectation :</td>
                <td>@Model.NbCoursAValider</td>
            </tr>
            <tr>
                <td>Enseignants inscrits :</td>
                <td>@Model.NbCoursAModifier</td>
            </tr>
            <tr>
                <td>Payées par les responsables élèves :</td>
                <td>@Model.NbCoursEnLigne</td>
            </tr>
            <tr>
                <td>Réalisées :</td>
                <td>@Model.NbCoursEnLigne</td>
            </tr>
            <tr>
                <td>Enseignants payés :</td>
                <td>@Model.NbCoursEnLigne</td>
            </tr>
            <tr>
                <td>Facturées :</td>
                <td>@Model.NbCoursEnLigne</td>
            </tr>
            <tr>
                <td>Annulées :</td>
                <td>@Model.NbCoursTotal</td>
            </tr>
            <tr>
                <td>Total de prestations :</td>
                <td>@Model.NbCoursTotal</td>
            </tr>
    </table>
</fieldset>