@model Tutorin.ViewModels.GestionnaireViewModel
@using Tutorin.Models
@{
    Layout = "_LayoutDuSite";
    ViewBag.Title = "Modifier un gestionnaire";
}

@{
    var gestionnaireId = User.FindFirst("RoleId").Value;
}

@section Menu {
    <a href="/Home/Index">Accueil</a>
    <a href="/Gestionnaire/TableauDeBord">Tableau de Bord</a>
    <a href="/Gestionnaire/modifier?gestionnaireId=@gestionnaireId">Mon Compte</a>
    <a href="/login/Deconnexion">Déconnexion</a>
}

@section css {

    <link href="/css/Form.css" rel="stylesheet" />
}

<h1>Modifier le profil</h1>
<div>

    @using (Html.BeginForm("Modifier", "Gestionnaire", FormMethod.Post))
    {
        <fieldset>
            <legend>Gestionnaire</legend>

            <div class="hidden">
                @Html.LabelFor(m => Model.Gestionnaire.Id)<br />
                @Html.TextBoxFor(m => Model.Gestionnaire.Id)<br />
                @Html.ValidationMessageFor(m => Model.Gestionnaire.Id)
            </div>

            <div class="boite-form">
                @Html.LabelFor(m => Model.Gestionnaire.Utilisateur.Nom)<br />
                @Html.TextBoxFor(m => Model.Gestionnaire.Utilisateur.Nom)<br />
                @Html.ValidationMessageFor(m => Model.Gestionnaire.Utilisateur.Nom)
            </div>

            <div class ="boite-form">
                @Html.LabelFor(m => Model.Gestionnaire.Utilisateur.Prenom)<br />
                @Html.TextBoxFor(m => Model.Gestionnaire.Utilisateur.Prenom)<br />
                @Html.ValidationMessageFor(m => Model.Gestionnaire.Utilisateur.Prenom)
            </div>

            <div class="boite-form">
                @Html.LabelFor(m => Model.Gestionnaire.Utilisateur.Identifiant) <br />
                @Html.TextBoxFor(m => Model.Gestionnaire.Utilisateur.Identifiant)<br />
                @Html.ValidationMessageFor(m => Model.Gestionnaire.Utilisateur.Identifiant)
            </div>

            <div class="boite-form">
                @Html.LabelFor(m => Model.Gestionnaire.PosteOccupe) <br />
                @Html.TextBoxFor(m => Model.Gestionnaire.PosteOccupe)<br />
                @Html.ValidationMessageFor(m => Model.Gestionnaire.PosteOccupe)
            </div>

           <div class="hidden">
                @Html.LabelFor(m => Model.Gestionnaire.Utilisateur.Id) <br />
                @Html.TextBoxFor(m => Model.Gestionnaire.Utilisateur.Id)<br />
                @Html.ValidationMessageFor(m => Model.Gestionnaire.Utilisateur.Id)
            </div>

            <div class="hidden">
                @Html.LabelFor(m => Model.Gestionnaire.UtilisateurId) <br />
                @Html.TextBoxFor(m => Model.Gestionnaire.UtilisateurId)<br />
                @Html.ValidationMessageFor(m => Model.Gestionnaire.UtilisateurId)
            </div>

            <input class="boutonStyle" type="submit" value="Modifier" />
        </fieldset>
    }
</div>

<form action="/Gestionnaire/ModifierMotDePasse" method="post">
<div class="boite-form">
    <!-- bouton qui active le menu deroulant pour modifier le mdp, il a le type=button pour ne pas être submit par défaut -->
    <label class="mdp-modifier">Modifier le mot de passe&ensp;</label>
    <button type="button" id="btn-modifier"><i class="fa-solid fa-arrow-down"></i></button>
    <!-- contenu du menu deroulant pour modifier le mot de passe -->
    <div id="form-modifier" style="display: none">
        <div>
            @Html.LabelFor(m => Model.NewPassword.OldPassword) <br />
            @Html.PasswordFor(m => Model.NewPassword.OldPassword)<br />
            @Html.ValidationMessageFor(m => Model.NewPassword.OldPassword)
        </div>
        <div>
            @Html.LabelFor(m => Model.NewPassword.NouveauPassword) <br />
            @Html.PasswordFor(m => Model.NewPassword.NouveauPassword)<br />
            @Html.ValidationMessageFor(m => Model.NewPassword.NouveauPassword)
        </div>
        <div>
            @Html.LabelFor(m => Model.NewPassword.ConfirmPassword) <br />
            @Html.PasswordFor(m => Model.NewPassword.ConfirmPassword)<br />
            @Html.ValidationMessageFor(m => Model.NewPassword.ConfirmPassword)
        </div>
        <input class="boutonStyle" type="submit" value="Valider" />
    </div>
</div>
</form>

@section Script {
    <script type="text/javascript" src="~/Scripts/jquery-3.3.1.js"></script>
    <script type="text/javascript" src="~/Scripts/jquery.validate-vsdoc.js"></script>
    <script type="text/javascript" src="~/Scripts/jquery.validate.unobtrusive.js"></script>
    <script type="text/javascript" src="~/Scripts/MenuModifierMdp.js"></script>
}
