@model Tutorin.ViewModels.GestionnaireViewModel
@{
    Layout = "_LayoutDuSite";
    ViewBag.Title = "Liste des gestionnaires";
}


<h1>Liste des gestionnaires : </h1>
<table border="1">

    <tr>
        <th>Nom</th>
        <th>Prénom</th>
        <th>Identifiant</th>
        <th>Poste</th>
       
    </tr>

    @foreach (Tutorin.Models.Gestionnaire gestionnaire in Model.ListeGestionnaires)
    {
        <tr>
            <td>@gestionnaire.Utilisateur.Nom</td>
            <td>@gestionnaire.Utilisateur.Prenom</td>
            <td>@gestionnaire.Utilisateur.Identifiant</td>
            <td>@gestionnaire.PosteOccupe</td>
           
            <td>
                <a href="/Gestionnaire/modifier?gestionnaireId=@gestionnaire.Id">Modifier</a>
                <a href="/Gestionnaire/supprimer?gestionnaireId=@gestionnaire.Id">Supprimer</a>
            </td>
        </tr>
    }
</table>

<br />
<a href="/Gestionnaire/ajouter">Ajouter un gestionnaire</a>

@section Menu {

    <ul>
        <li>Accueil</li>
        <li>Présentation</li>
    </ul>
}

