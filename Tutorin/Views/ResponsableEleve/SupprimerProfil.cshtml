@model Tutorin.Models.ResponsableEleve
@{
    ViewBag.Title = "Supprimer le compte responsable";
    Layout = "_LayoutDuSite";
}

@{
    var responsableId = User.FindFirst("RoleId").Value;
}


@section css {
        <link href="/css/Login.css" rel="stylesheet" />
}

<div class="msg-deconnexion">
    <h3>
        Etes-vous sûr de vouloir supprimer votre profil @Model.Utilisateur.Prenom ?
        <br/>- vous n'aurez plus accès à votre profil,
        <br/>- vos abonnement seront supprimés,
        <br/>- les élèves inscrits n'auront plus accès à la plateforme.
    </h3>
    <a href="/ResponsableEleve/supprimer?responsableId=@responsableId">Je confirme</a>
</div>

@section Menu {
    <a href="/Home/">Accueil</a>
    <a href="/Prestation/VoirPrestationsValidees?responsableId=@responsableId">Prestations</a>
    <a href="/ResponsableEleve/modifier?responsableId=@responsableId">Mon Compte</a>
    <a href="/login/Deconnexion">Déconnexion</a>
}