@model Tutorin.ViewModels.PrestationViewModel
@{
    Layout = "_LayoutDuSite";
    ViewBag.Title = "Liste des prestations";
}


<h1>Liste des prestations : </h1>
<table border="1">

    <tr>
        <th>Type de prestation</th>
        <th>Matière</th>
        <th>Niveau</th>
        <th>Presentiel</th>
        <th>Etat de la presation</th>
        <th>Actions</th>
    </tr>

    @foreach (Tutorin.Models.Prestation prestation in Model.ListePrestations)
    {
        <tr>
            <td>@prestation.TypePrestation</td>
            <td>@prestation.Matiere</td>
            <td>@prestation.Niveau</td>
            <td>@prestation.Presentiel</td>
            <td>@prestation.EtatPrestation</td>
            <td>
                <a href="/Prestation/modifier?eleveId=@prestation.Id">Modifier</a>
                <a href="/Prestation/supprimer?eleveId=@prestation.Id">Supprimer</a>
            </td>
        </tr>
    }
</table>

<br />
<a href="/Prestation/ajouter">Ajouter une prestation</a>
