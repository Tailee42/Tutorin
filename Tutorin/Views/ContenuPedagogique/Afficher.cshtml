@model Tutorin.Models.ContenuPedagogique

@using Tutorin.Models
@using Tutorin.ViewModels

@{
    ViewBag.Title = "Afficher Contenu Pedagogique";
    Layout = "_LayoutDuSite";
}

@{
    string roleId = User.FindFirst("RoleId").Value;
}

@section css {

    <link href="/css/MisePageTexte.css" rel="stylesheet" />
}

@section Menu {

    <a href="/Index">Accueil</a>
    <a href="/ContenuPedagogique/">Les cours</a>
    <a href="/Eleve/modifier?eleveId=@roleId">Mon Compte</a>
    <a href="/login/Deconnexion">Déconnexion</a>
}

<div class="outils">
    <i id="couleur" class="fa-solid fa-clone"></i>
    <i id="interligne" class="fa-sharp fa-solid fa-grip-lines"></i>
    <i id="police" class="fa-solid fa-font"></i>
    <i id="size" class="fa-solid fa-text-height"></i>
</div>

<div class="cours">
    <h1 class="titre-cours">@Html.Raw(TypeMatiereExtensions.IconHTMLPrestation(Model.Matiere)) @Model.Titre</h1>
    

    <div class="info-cours">
        <h4>@Model.Niveau</h4>
        
    </div>
    <hr />

    <p class="contenu-cours">@Html.Raw(Model.ContenuDuCours)</p>

    <hr />
    <div class="date-cours">
        <h4><span>Auteur :</span> @Model.Enseignant.Utilisateur.Nom.ToUpper() @Model.Enseignant.Utilisateur.Prenom</h4>
        <h4><span>Publié le :</span> @Model.DatePublication.ToString("d")</h4>
        <h4><span>Dernière mise à jour :</span> @Model.DateMiseAJour.ToString("d")</h4>
    </div>

    <div class="telecharger"> @* Imprimer ?*@
        <button id="btn-telechargerCours">Télécharger</button>
    </div>
    
</div>


@section Script {
    <script src="/Scripts/lirecouleur.js"></script>
    <script src="/Scripts/lirecouleur-config.js"></script>
    <script src="/Scripts/lirecouleur-ui.js"></script>
    <script src="/Scripts/lirecouleur-main.js"></script>
}
